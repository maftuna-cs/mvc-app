<h2>Add Task</h2>
    
    <form method="POST" action="/roomz/add-room" enctype="multipart/form-data">

        <label>Title</label>
        <input type="text" name="titl" id="titl"> <br><br>

        <label>Price</label>
        <input type="text" name="prc" id="prc"> <br><br>

        <label>Description</label>
        <textarea id="descr" name="descr"></textarea><br><br>

        <label>Location</label>
        <input type="text" name="loc" id="loc"> <br><br>

        <label>Room</label>
        <input type="text" name="roomFeatured" id="roomFeatured"> <br><br>

        <label>Room Type</label>
        <select name="type">
            <option value="regular">Regular</option>
            <option value="featured">Featured</option>
        </select>

         <label>File Upload</label>
        <input type="file" name="roomPhoto" id="roomPhoto"> <br><br>
        

        <input type="submit" value="Add">

    </form>
