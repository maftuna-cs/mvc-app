<section class="room-list-header">
    <h1> Choose beautiful rooms to stay</h1>
</section>
<section class="room-list">
    {{#each products}}

    <div class="room-list-items">
        <img src="{{this.imgURL}}" alt="{{this.title}}" class="post-image" srcset="">

        <p class="room-list-title">
            {{this.title}}
        </p>

        <p class="room-list-desc">
            {{this.description}}
        </p>

        <p class="room-list-price">
            $ {{this.price}} / per night
        </p>
    </div>

    {{/each}}
</section>



<section class="room-list">

 {{#each data}}

    <div class="room-list-items">

        <img src="/uploads/{{this.roomPhoto}}"> 

        <p class="room-list-title">
            {{this.titl}}
        </p>

            {{this.prc}}
        </p>

        <p class="room-list-desc">
            {{this.descr}}
        </p>

         <p class="room-list-desc">
            {{this.loc}}
        </p>

        <p class="room-list-price">
             {{this.roomFeatured}} 
        </p>

        <a href="/user-reg/edit/{{this.id}}">Edit</a>
    </div>

    {{/each}}

    </section>